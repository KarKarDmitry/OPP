                                                            IsReadOnly="{Binding Source={x:Static opp:Autentification.isEditable},Converter={StaticResource IsReadOnlyConverter}}" />

                                    </DataGrid.Columns>

                                </DataGrid>

                            </Grid>
                        </DataTemplate>
                    </TabControl.ContentTemplate>

                </TabControl>

            </TabItem>

